<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Pal-Engke | Nearby Palengke</title>
  <link rel="icon" type="image/png" href="/images/robot-logo.ico">

  <!-- IMPORTANT: Bootstrap must load BEFORE your custom CSS so your styles take precedence -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/palengke.css">
</head>
<body class="palengke-bg">

  <div class="palengke-container">

    <!-- Header / Search -->
    <header class="page-header">
      <h3 class="fw-bold">Nearby Palengke</h3>

      <div class="search-wrap">
        <input id="search-input" type="text" class="form-control search-bar" placeholder="Search markets or vendors...">
      </div>
    </header>

    <!-- Filters (centered) -->
    <section class="filters d-flex flex-wrap justify-content-center">
      <button class="btn btn-filter active">All Markets</button>
      <button class="btn btn-filter">Vegetables</button>
      <button class="btn btn-filter">Meat &amp; Fish</button>
      <button class="btn btn-filter">Open Now</button>
    </section>

    <!-- Map container: replace content with an <img> or an <iframe> later -->
    <section id="map-container" class="map-placeholder" aria-label="Map area">
      <div class="map-fallback">
        <p class="mb-1">Interactive map will appear here</p>
        <small class="text-muted">Replace with &lt;img src="/images/your-map.jpg"&gt; or an &lt;iframe&gt; embed</small>
      </div>
    </section>

    <!-- Market list (centered cards) -->
    <section class="markets">
      <div class="market-card shadow-sm p-3 mb-3 rounded">
        <h5 class="fw-bold">Barangay Central Market</h5>
        <p class="text-muted">0.3 km away • 2 min walk</p>
        <div class="tags mb-2">
          <span class="badge bg-success">Fresh Stock</span>
          <span class="badge bg-info text-dark">Best Prices</span>
          <span class="badge bg-primary">Open Now</span>
        </div>
        <p>🕔 5:00 AM - 6:00 PM • 📞 (02) 123-4567</p>
        <div class="d-flex justify-content-between align-items-center">
          <span class="rating">⭐ 4.8</span>
          <button class="btn btn-sm btn-view">View Details</button>
        </div>
      </div>

      <div class="market-card shadow-sm p-3 mb-3 rounded">
        <h5 class="fw-bold">Tita Rosa's Fresh Corner</h5>
        <p class="text-muted">0.5 km away • 5 min walk</p>
        <div class="tags mb-2">
          <span class="badge purple">Premium Quality</span>
          <span class="badge bg-warning text-dark">Local Favorite</span>
        </div>
        <p>🕔 6:00 AM - 8:00 PM • 📱 0917-123-4567</p>
        <div class="d-flex justify-content-between align-items-center">
          <span class="rating">⭐ 4.9</span>
          <button class="btn btn-sm btn-call">Call Now</button>
        </div>
      </div>

      <div class="market-card shadow-sm p-3 mb-3 rounded">
        <h5 class="fw-bold">Kuya Jun's Vegetable Stand</h5>
        <p class="text-muted">0.8 km away • 10 min walk</p>
        <p>🕔 6:00 AM - 7:00 PM</p>
        <div class="d-flex justify-content-between align-items-center">
          <span class="rating">⭐ 4.6</span>
          <button class="btn btn-sm btn-view">View Details</button>
        </div>
      </div>
    </section>

  </div>

  <!-- keep navbar partial as-is -->
  <%- include('partials/navbar', { activePage: 'palengke' }) %>
  <script src="/scripts/palengke.js"></script>

</body>
</html>