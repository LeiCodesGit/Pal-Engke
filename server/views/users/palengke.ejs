<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pal-Engke | Nearby Palengke</title>
  <link rel="stylesheet" href="/styles/palengke.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="palengke-bg">

  <!-- Header -->
  <header class="p-3">
    <h3 class="fw-bold">Nearby Palengke</h3>
    <input type="text" class="form-control search-bar mt-2" placeholder="Search markets or vendors...">
  </header>

  <!-- Filter Buttons -->
  <section class="filters d-flex gap-2 px-3 mt-3">
    <button class="btn btn-filter active">All Markets</button>
    <button class="btn btn-filter">Vegetables</button>
    <button class="btn btn-filter">Meat & Fish</button>
    <button class="btn btn-filter">Open Now</button>
  </section>

  <!-- Map Placeholder -->
  <section class="map-placeholder my-3 mx-3 text-center d-flex flex-column justify-content-center align-items-center">
    <p>Interactive map would be here</p>
    <small>Showing markets within 2km</small>
  </section>

  <!-- Market List -->
  <section class="markets px-3">
    <div class="market-card shadow-sm p-3 mb-3 rounded">
      <h5 class="fw-bold">Barangay Central Market</h5>
      <p class="text-muted">0.3 km away • 2 min walk</p>
      <div class="tags mb-2">
        <span class="badge bg-success">Fresh Stock</span>
        <span class="badge bg-info text-dark">Best Prices</span>
        <span class="badge bg-primary">Open Now</span>
      </div>
      <p>🕔 5:00 AM - 6:00 PM • 📞 (02) 123-4567</p>
      <div class="d-flex justify-content-between align-items-center">
        <span class="rating">⭐ 4.8</span>
        <button class="btn btn-sm btn-view">View Details</button>
      </div>
    </div>

    <div class="market-card shadow-sm p-3 mb-3 rounded">
      <h5 class="fw-bold">Tita Rosa's Fresh Corner</h5>
      <p class="text-muted">0.5 km away • 5 min walk</p>
      <div class="tags mb-2">
        <span class="badge bg-purple">Premium Quality</span>
        <span class="badge bg-warning text-dark">Local Favorite</span>
      </div>
      <p>🕔 6:00 AM - 8:00 PM • 📱 0917-123-4567</p>
      <div class="d-flex justify-content-between align-items-center">
        <span class="rating">⭐ 4.9</span>
        <button class="btn btn-sm btn-call">Call Now</button>
      </div>
    </div>

    <div class="market-card shadow-sm p-3 mb-3 rounded">
      <h5 class="fw-bold">Kuya Jun's Vegetable Stand</h5>
      <p class="text-muted">0.8 km away • 10 min walk</p>
      <p>🕔 6:00 AM - 7:00 PM</p>
      <div class="d-flex justify-content-between align-items-center">
        <span class="rating">⭐ 4.6</span>
        <button class="btn btn-sm btn-view">View Details</button>
      </div>
    </div>
  </section>

  <!-- Bottom Nav -->
  <nav class="bottom-nav">
    <a href="#" class="nav-link">Home</a>
    <a href="#" class="nav-link">Meals</a>
    <a href="/palengke" class="nav-link active">Palengke</a>
    <a href="/community" class="nav-link">Community</a>
    <a href="#" class="nav-link">Profile</a>
  </nav>

</body>
</html>
